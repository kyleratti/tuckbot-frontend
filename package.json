{
  "name": "tuckbot-frontend",
  "version": "1.0.0",
  "description": "The frontend for Tuckbot that serves video content to visitors",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "dev": "npm run start",
    "start": "cross-env NODE_ENV=development webpack-dev-server",
    "prebuild": "npm run clean",
    "build": "webpack && echo tuckbot.tv > ./dist/CNAME",
    "deploy": "npm run build",
    "prepublish": "npm run build && npx react-snap",
    "publish": "gh-pages -d dist",
    "generate-thumbs": "ts-node-dev --cls tools/generate-thumbs.ts",
    "remove-exif": "ts-node-dev --cls tools/remove-exif.ts",
    "serve": "npx http-server ./dist"
  },
  "reactSnap": {
    "source": "dist",
    "include": [
      "/index.html"
    ],
    "crawl": false
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kyleratti/tuckbot-frontend.git"
  },
  "keywords": [],
  "author": "",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/kyleratti/tuckbot-frontend/issues"
  },
  "dependencies": {
    "dotenv-webpack": "^1.8.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-image-gallery": "^0.9.1",
    "react-router-dom": "^5.2.0",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@types/image-thumbnail": "^1.0.0",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@types/react-image-gallery": "^0.8.4",
    "@types/react-router-dom": "^5.1.5",
    "@webpack-cli/serve": "^0.2.0",
    "cross-env": "^6.0.3",
    "css-loader": "^3.5.3",
    "dotenv": "^8.2.0",
    "file-loader": "^4.3.0",
    "gh-pages": "^2.2.0",
    "html-webpack-plugin": "^3.2.0",
    "http-server": "^0.12.3",
    "image-thumbnail": "^1.0.8",
    "minimist": "^1.2.5",
    "piexifjs": "^1.0.6",
    "prerender-loader": "^1.3.0",
    "react-snap": "^1.23.0",
    "sass": "^1.26.5",
    "sass-loader": "^8.0.2",
    "source-map-loader": "^0.2.4",
    "style-loader": "^1.2.1",
    "ts-loader": "^6.2.2",
    "ts-node": "^8.10.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.9.2",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0"
  }
}
